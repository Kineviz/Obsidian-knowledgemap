# Obsidian Knowledge Map Configuration
# Copy this file to .env and update the values for your setup

# Required: OpenAI API Key for AI-powered entity extraction
OPENAI_API_KEY=your_openai_api_key_here

# Required: Path to your Obsidian vault
VAULT_PATH=/path/to/your/obsidian/vault

# Optional: Server configuration
SERVER_PORT=7001
HOST=0.0.0.0

# Optional: Processing configuration
MAX_CONCURRENT=5
CHUNK_THRESHOLD=0.75
CHUNK_SIZE=1024
EMBEDDING_MODEL=minishlab/potion-base-8M

# Optional: SSL configuration (for HTTPS)
# SSL_CERT=/path/to/cert.pem
# SSL_KEY=/path/to/key.pem
# SSL_PASSWORD=your_ssl_password

# Optional: Debug mode
# DEBUG=false
